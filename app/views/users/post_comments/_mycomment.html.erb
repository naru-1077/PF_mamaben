<% post_comments.each do |post_comment| %>
  <div class="text-left">
  <h2 class="title">↓自分のコメント↓</h2>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
    <%= link_to "削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-danger", "data-confirm" => "本当に削除しますか?", data: {"turbolinks" => false} %>
  <% end %>
  </div>
<% end %>