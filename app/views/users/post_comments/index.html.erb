<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% if post_comment.user == current_user %>
        <p><strong>コメント履歴一覧</strong>(全<%= @post.post_comments.comment.count %>件)</p>
        <% @post.post_comments.each do |post_comment| %>
          <table class= "post_comment-index d-inline-block">
            <tr>
              <td>
                <%= link_to post_path(@post), data: {"turbolinks" => false} do %>
                  <%= attachment_image_tag @post, :image, format: 'jpeg', size: "360x200" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>コメント<%= post_comment.comment %></td>
            </tr>
          </table>
        <% end %>
      <% else %>
        <p><strong>コメント履歴一覧</strong>(全<%= @post.post_comments.comment.count %>件)</p>
        <% @post.post_comments.each do |post_comment| %>
          <table class= "d-inline-block">
            <tr>
              <td><%= link_to "#{@post.user.name}", posts_path, data: {"turbolinks" => false} %></td>
            </tr>
            <tr>
              <td>コメント<%= post_comment.comment %></td>
            </tr>
          </table>
        <% end %>
      <% end %>
   </div>
  </div>

  <br>
  <div class="row">
    <div class="center-block mx-auto">
      <%= paginate @items %>
    </div>
  </div>

</div>