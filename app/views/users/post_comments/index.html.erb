<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p><strong>コメント一覧</strong>(全<%= @post_comments.count %>件)</p>
        <% @post_comments.each do |post_comment| %>
          <table class= "comment-index d-inline-block table-bordered">
            <tr>
              <td>
                <%= link_to post_path(post_comment.post) do %>
                  <%= attachment_image_tag post_comment.post, :image, format: 'jpeg', size: "340x220" %>
                <% end %>
              </td>
            </tr>
            <tr>
            <% if current_user.id == post_comment.user.id %>
              <td>アカウント名：<%= "#{post_comment.user.name}".truncate(18) %>さん</td>
            <% else %>
              <td>アカウント名：<%= link_to "#{post_comment.user.name}".truncate(18), users_post_histories_path(post_comment.user.id) %>さん</td>
            <% end %>
            </tr>
            <tr>
              <td>コメント:<%= post_comment.comment %></td>
            </tr>
          </table>
        <% end %>

    </div>
  </div>

  <div class="row">
    <div class="center-block mx-auto">
      <%= paginate @post_comments %>
    </div>
  </div>

</div>