<% if post.favorited_by?(current_user) %>
  <%= link_to "お気に入り解除", post_favorites_path(post), class: "fas fa-star btn btn-success btn-sm", method: :delete, remote: true %>
<% else %>
  <%= link_to "お気に入り", post_favorites_path(post), class: "far fa-star btn btn-success btn-sm", method: :post, remote: true %>
<% end %>