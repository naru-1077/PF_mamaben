<div class="container">
  <div class="row">
    <div class="col-md-12">

    　<%= form_with model: @user, url: users_path, local: true do |f| %>
      <table class= "table table-hover table-inverse table-borderless">
    　　  <tr>
          <td>アカウント名</td>
          <td><%= f.text_field :name, size: 50 %></td>
    　　  </tr>
    　　  <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, size: 50 %></td>
        </tr>
        <tr>
          <td>パスワード(6文字以上)</td>
          <td><%= f.password_field :password, size: 50 %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, size: 50 %></td>
        </tr>
      </table>
        <div class="text-center">
          <%= f.submit "編集内容を保存する", class: 'btn btn-primary btn-sm' %>
        </div>
      <% end %>

    </div>
  </div>
</div>