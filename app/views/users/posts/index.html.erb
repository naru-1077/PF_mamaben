<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% if @genre %>
        <p>
          <strong><%= @genre.name %></strong>(全<%= @genre.post.count %>件)
        </p>
        <% @genre.posts.each do |post| %>
          <table class= "post-index d-inline-block">
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag(post, :image, :fill, 270, 150) %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= "アカウント名: #{post.user.name}さん" %></td>
            </tr>
            <tr>
              <td><%= "ジャンル: #{post.genre.genre_name}" %></td>
            </tr>
            <tr>
              <td><%= "タイトル: #{post.title}" %></td>
            </tr>
            <tr>
              <td><%= "お気に入り数: #{post.favorites.count}件" %></td>
            </tr>
            <tr>
              <td><%= "コメント数: #{post.post_comments.count}件" %></td>
            </tr>
          </table>
        <% end %>
      <% else %>
        <p>
          <strong>投稿一覧</strong>(全<%= @posts_all.count %>件)
        </p>
        <% @posts.each do |post| %>
           <table class= "post-index d-inline-block">
            <tr>
              <td>
                <%= link_to post_path(post), data: {"turbolinks" => false} do %>
                  <%= attachment_image_tag(post, :image, :fill, 360, 200) %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= "アカウント名: #{post.user.name}さん" %></td>
            </tr>
            <tr>
              <td><%= "ジャンル: #{post.genre.genre_name}" %></td>
            </tr>
            <tr>
              <td><%= "タイトル: #{post.title}" %></td>
            </tr>
            <tr>
              <td><%= "お気に入り数: #{post.favorites.count}件" %></td>
            </tr>
            <tr>
              <td><%= "コメント数: #{post.post_comments.count}件" %></td>
            </tr>
            <tr>
              <td><%= "投稿日時: #{post.created_at.strftime('%Y/%m/%d')}" %></td>
            </tr>
          </table>
        <% end %>
      <% end %>

   </div>
  </div>


  <br>
  <div class="row">
    <div class="center-block mx-auto">
      <%= paginate @posts %>
    </div>
  </div>

</div>