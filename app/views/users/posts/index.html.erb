<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render "users/posts/search", q: @q %>
    </div>

    <div class="col-md-9">
      <p><strong>
        <% if !params[:q] && params[:tag_name].blank? %>
          投稿一覧(全<%= @posts_all.count %>件)
        <% else %>
          検索結果(全<%= "#{@post_count} / #{@posts_all.count}" %>件)
        <% end %>
      </strong></p>

      <% @posts_search.each do |post| %>
        <table class= "post-index d-inline-block">
          <tr>
            <td>
              <%= link_to post_path(post), data: {"turbolinks" => false} do %>
                <%= attachment_image_tag post, :image, format: 'jpeg', size: "360x200" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= "アカウント名: #{post.user.name}さん" %></td>
          </tr>
          <tr>
            <td><%= "ジャンル: #{post.genre.genre_name}" %></td>
          </tr>
          <tr>
            <td><%= "タイトル: #{post.title}" %></td>
          </tr>
          <tr>
            <td><%= "お気に入り数: #{post.favorites.count}件" %></td>
          </tr>
          <tr>
            <td><%= "コメント数: #{post.post_comments.count}件" %></td>
          </tr>
          <tr>
            <td><%= "投稿日時: #{post.created_at.strftime('%Y/%m/%d')}" %></td>
          </tr>
        </table>
      <% end %>

    <!--colの閉じ-->
    </div>


    <div class="text-center">
      <%= paginate @posts_search %>
    </div>

  </div>
</div>