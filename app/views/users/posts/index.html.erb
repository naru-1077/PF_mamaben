<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% if @genre %>
        <p>
          <strong><%= @genre.name %></strong>(全<%= @genre.posts.count %>件)
        </p>
        <% @genre.posts.each do |post| %>
          <table class= "d-inline-block">
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag(post, :image, :fill, 270, 150) %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= post.user.name %></td>
            </tr>
            <tr>
              <td><%= post.genre.name %></td>
            </tr>
            <tr>
              <td><%= post.title %></td>
            </tr>
            <tr>
              <td><%= "お気に入り数: #{post.favorite.count}件" %></td>
            </tr>
            <tr>
              <td><%= "コメント数: #{post.comment.count}件" %></td>
            </tr>
          </table>
        <% end %>
      <% else %>
        <p>
          <strong>投稿一覧</strong>(全<%= @posts_all.count %>件)
        </p>
        <% @posts.each do |post| %>
           <table class= "d-inline-block">
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag(post, :image, :fill, 270, 150) %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= post.user.name %></td>
            </tr>
            <tr>
              <td><%= post.genre.name %></td>
            </tr>
            <tr>
              <td><%= post.title %></td>
            </tr>
            <tr>
              <td><%= "お気に入り数: #{post.favorite.count}件" %></td>
            </tr>
            <tr>
              <td><%= "コメント数: #{post.comment.count}件" %></td>
            </tr>
          </table>
        <% end %>
      <% end %>
   </div>
  </div>

  <br>
  <div class="row">
    <div class="center-block mx-auto">
      <%= paginate @posts %>

    </div>
  </div>
</div>