<div class="container">
  <div class="row">
    <div class="col-md-12">

      <%= render "admins/posts/search" %>
      <h4>投稿一覧(全<%= @posts_all.count %>件)</h4>

      <% @posts.each do |post| %>
        <table class= "admin-post-index d-inline-block">
          <tr>
            <td>
              <%= link_to admins_post_path(post) do %>
                <%= attachment_image_tag post, :image, format: 'jpeg', size: "250x200" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>アカウント名：<%= link_to "#{post.user.name}".truncate(18), post_histories_admins_user_path(post.user.id) %>さん</td>
          </tr>
          <tr>
            <td><%= "ジャンル: #{post.genre.genre_name}" %></td>
          </tr>
          <tr>
            <td><%= "タイトル: #{post.title}".truncate(18) %></td>
          </tr>
          <tr>
            <td><%= "お気に入り数: #{post.favorites.count}件" %></td>
          </tr>
          <tr>
            <td>コメント数：<%= "#{post.post_comments.count}件" %></td>
          </tr>
          <tr>
            <td><%= "投稿日時: #{post.created_at.strftime('%Y/%m/%d')}" %></td>
          </tr>
          <tr>
            <td>点数：<%= post.score %></td>
          </tr>
        </table>
      <% end %>

    <!--colの閉じ-->
    </div>

    <div class="center-block mx-auto">
      <%= paginate @posts %>
    </div>

  </div>
</div>