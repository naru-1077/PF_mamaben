<div class="container">

  <!--モデルpost-->
  <div class="row">
    <div class="col-md-5.5">
      <table class="table table-borderless">
        <tr>
          <td>アカウント名</td>
          <td><%= link_to "#{@post.user.name}", post_histories_admins_user_path(@post.user.id) %>さん</td>
        </tr>
        <tr>
          <td>ジャンル選択</td>
          <td><%= @post.genre.genre_name %></td>
        </tr>
        <tr>
          <td>タグ</td>
          <td><%= @post.tag_list %></td>
        </tr>
        <tr>
          <td>お弁当完成画像</td>
        </tr>
      </table>
      <table class="table table-borderless">
        <tr>
          <td><%= attachment_image_tag @post, :image, format: 'jpeg', size: "450x250" %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-6.5">
      <table class="post-show table table-borderless">
        <tr>
          <td style="width: 30%">タイトル名</td>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <td>投稿紹介文</td>
          <td><%= @post.introduction %></td>
        </tr>
        <tr>
          <td>材料</td>
          <td><%= @post.material %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <% @post.recipes.each_with_index do |recipe, idx| %>
      <div class="col-md-4">
        <% if recipe.present? %>
        <table class="table table-borderless">
          <thead>
            <tr>
              <td style="width:10%"><%= "作り方#{idx + 1}" %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= attachment_image_tag recipe, :recipe_image, format: 'jpeg', size: "350x200" %></td>
            </tr>
            <tr>
              <td><%= recipe.recipe %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="text-center" style="margin-bottom: 10px">
    <%= link_to image_tag(src= "destroy.png"), admins_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか?" %>
  </div>

</div>