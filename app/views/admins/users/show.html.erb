<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="title"> <%= @user.name %>さんの会員詳細</h2>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>アカウント名</td>
             <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @user.withdraw_status == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admins_user_path(@user), class: 'btn btn-success btn-sm' %></td>
            <td><%= link_to "投稿履歴一覧を見る", posts_path(@user), class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to "コメント履歴一覧を見る", post_comments_path, class: 'btn btn-info btn-sm' %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>