<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h2 class="title">ジャンル一覧・追加</h2>
        <%= form_with model: [:admins, @genre], local: true do |f| %>
          <% @genre.errors.full_messages.each do |message| %>
            <p>※<%= message %></p>
          <% end %>

          <table class= "table table-hover table-inverse table-borderless">
            <thead>
              <tr>
                <td style="width:20%">ジャンル名</td>
                <td style="width:20%"><%= f.text_field :genre_name, placeholder: "ジャンル名", size: 25 %></td>
                <td><%= image_submit_tag("entry.png") %></td>
              </tr>
            </thead>
          </table>
        <% end %>

        <table class="genre-index table table-hover table-inverse table-borderless" >
          <thead>
            <tr style="background-color: #ffe6ca">
              <th class="text-center">登録済みジャンル</th>
            </tr>
          </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.genre_name %></td>
                <td class="genre-index text-left">
                  <%= link_to image_tag(src= "edit.png"), edit_admins_genre_path(genre) %>
                  <%= link_to image_tag(src= "destroy.png"), admins_genre_path(genre), method: :delete, "data-confirm" => "このジャンルを削除しますか?" %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>

    </div>
  </div>
</div>